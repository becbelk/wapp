# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build wapp`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t wapp`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system wapp && \
          adduser --system -G wapp wapp

COPY apps/wapp/dist wapp/
RUN chown -R wapp:wapp .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix wapp --omit=dev -f install

CMD [ "node", "wapp" ]
